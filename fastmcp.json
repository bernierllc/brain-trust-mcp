{
  "$schema": "https://gofastmcp.com/public/schemas/fastmcp.json/v1.json",
  "source": {
    "type": "filesystem",
    "path": "server.py",
    "entrypoint": "mcp"
  },
  "environment": {
    "type": "uv",
    "python": ">=3.12",
    "dependencies": [
      "fastmcp>=0.1.0",
      "pydantic>=2.0.0",
      "httpx>=0.25.0",
      "python-dotenv>=1.0.0",
      "structlog>=23.0.0",
      "openai>=1.0.0"
    ]
  },
  "deployment": {
    "transport": "http",
    "host": "0.0.0.0",
    "port": 8000,
    "path": "/mcp",
    "log_level": "INFO",
    "env": {
      "OPENAI_API_KEY": "${OPENAI_API_KEY}",
      "OPENAI_MODEL": "${OPENAI_MODEL}",
      "OPENAI_MAX_TOKENS": "${OPENAI_MAX_TOKENS}",
      "LOG_LEVEL": "${LOG_LEVEL}"
    },
    "cwd": "/app"
  }
}
